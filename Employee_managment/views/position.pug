doctype html
html
  head
    title= "position"
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      a(Id = "welcome_place" class = "link") Welcome Place
      a(Id = "employee" class = "link") Employee
      a(Id = "department" class = "link") Department
      a(Id = "position" class = "link") Position

    article(class = "search")
      form(name = "form" method = 'get')
            select(name="Selection") 
              option(value="") 
              option(value="Name") name
              option(value="Authority") authority
              option(value="Department") department
              option(value="Salary") salary
            input(type="text" placeholder='Search' name='search')
      a(id = "Search" class= 'button') Search

    article(class = "add")
      form(name = "form2" method = 'get')
            input(type="text" placeholder='Name' name='name')
            input(type="number" placeholder='Authority' name='authority')
            input(type="text" placeholder='Department' name='department')
            input(type="number" placeholder='Salary' name='salary')
      a(id = "add" class= 'button') +

    table 
      thead 
        tr 
          th(scope="col") ID
          th(scope="col") Name
          th(scope="col") Authority
          th(scope="col") Department
          th(scope="col") Salary
          th(scope="col") 
      tbody 


  script(type = 'module' src='/javascripts/redirection.js')
  script(type = 'module' src='/javascripts/position.js')